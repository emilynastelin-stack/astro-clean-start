---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Archive of Soviet Trumpet Music</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1; /* main content grows to push footer to bottom */
      }
    </style>
  </head>
  <body>
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />
    <LanguageSwitcher />
    
    <script>
      // Update page title based on language
      function updatePageTitle() {
        if (window.LanguageManager) {
          const title = window.LanguageManager.getTranslation('nav.brand.primary');
          document.title = title;
        }
      }

      // Update title when language changes
      document.addEventListener('languageChanged', updatePageTitle);
      
      // Update title when page loads
      document.addEventListener('DOMContentLoaded', () => {
        // Wait a bit for LanguageManager to be available
        setTimeout(updatePageTitle, 100);
      });
    </script>
  </body>
</html>
